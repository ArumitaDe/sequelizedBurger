
  
<main>
   <div class="container">

      <div class="row lowerRow">
         <div class="col-md-3 col-md-offset-3">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
               <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                  <div>{{this.burger_name}}</div>
                  <button type="submit" class='notDevouredBurger'> Devour it !
                  </button>
               </form>
            </div>
            {{/unless}}
            {{/each}}
         </div>
         <div class="col-md-4 col-md-offset-1">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class='devouredBurger'>
               <div>
                  {{this.burger_name}}
               </div>
            </div>
            {{/if}}
            {{/each}}
          </div>
      </div>
   </div>
</main>


